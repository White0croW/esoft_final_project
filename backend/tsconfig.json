{
    "compilerOptions": {
        "target": "ES2020",
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}